{
  "scripts": {
    "copy-html": "ncp ./assets/html ./public",
    "watch": "chokidar 'assets/**/*' -c 'npm run build'",
    "start": "browser-sync start --server 'public' --files 'public'",
    "build:css": "esbuild assets/css/local.css --bundle --outdir=public/",
    "build:ts": "esbuild assets/ts/index.ts --bundle --outdir=public/ --platform=node --target=es2020",
    "build": "npm run build:css && npm run build:ts && npm run copy-html"
  },
  "dependencies": {
    "bootstrap": "^5.3.2"
  },
  "devDependencies": {
    "@preact/signals": "^1.2.2",
    "browser-sync": "^3.0.2",
    "chokidar-cli": "^3.0.0",
    "ncp": "^2.0.0",
    "preact": "^10.19.3"
  }
}
